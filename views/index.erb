<form method="post">
	<input type="text" value="http://" name="url" id="url" />
	<input type="submit" value="shorten" id="submit" />
	<div class="clear"></div>
</form>
<% if @shortcode %>
	<section class="result">
		Your shortened URL <%= h(params[:url]) %> is:
		<a href="http://<%= "localhost:#{Sinatra::Application.port}/#{@shortcode}" %>">
		http://localhost/<%= @shortcode %></a>
	</section>
<% end %>